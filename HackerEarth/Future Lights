#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int *a;
        a=new int[n+1];
        int i,sum=0;
        for(i=0;i<=n;i++)
        {
        cin>>a[i];
        sum+=a[i];
        if(sum%2==0 && i<n)
            sum=sum+1;
        }
    cout<<(sum)<<endl;
    }
}
